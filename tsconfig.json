{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "outDir": "./src-js",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "allowJs": true,

    "strict": true,
    "noImplicitAny": true,

    "moduleResolution": "node",

    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
